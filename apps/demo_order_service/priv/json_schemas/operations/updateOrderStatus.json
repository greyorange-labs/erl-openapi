{
  "operation_id": "updateOrderStatus",
  "path": "/orders/{orderId}",
  "method": "PUT",
  "summary": "Update order status",
  "tags": ["Orders"],
  "parameters": [
    {
      "name": "orderId",
      "in": "path",
      "required": true,
      "schema": {
        "type": "string"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "$ref": "#/components/schemas/OrderStatusUpdate"
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Order updated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/OrderResponse"
          }
        }
      }
    },
    "404": {
      "description": "Order not found",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/ErrorResponse"
          }
        }
      }
    }
  }
}


