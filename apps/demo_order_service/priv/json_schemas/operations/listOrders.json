{
  "operation_id": "listOrders",
  "path": "/orders",
  "method": "GET",
  "summary": "List all orders",
  "tags": ["Orders"],
  "parameters": [
    {
      "name": "status",
      "in": "query",
      "schema": {
        "type": "string",
        "enum": ["pending", "confirmed", "shipped", "delivered", "cancelled"]
      }
    },
    {
      "name": "limit",
      "in": "query",
      "schema": {
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 20
      }
    }
  ],
  "responses": {
    "200": {
      "description": "List of orders",
      "content": {
        "application/json": {
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderResponse"
            }
          }
        }
      }
    }
  }
}


